                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/setting_linear_location" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/icon_triangle" />
            </LinearLayout>

            <View style="@style/Linear_Divide_Settings01" />

            <View
                style="@style/Linear_Divide_Settings01"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:id="@+id/setting_linear_update"
                style="@style/Setting_Linear_Style02"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/setting_linear_update" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/icon_triangle" />
            </LinearLayout>

            <View style="@style/Linear_Divide_Settings01" />
        </LinearLayout>
    </ScrollView>

